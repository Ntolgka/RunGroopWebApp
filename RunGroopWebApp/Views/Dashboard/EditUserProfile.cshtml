@using RunGroopWebApp.ViewModels;
@model EditUserDashboardViewModel

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" class="form-control" placeholder="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AboutMe">AboutMe</label>
        <input asp-for="AboutMe" class="form-control" placeholder="AboutMe" />
        <span asp-validation-for="AboutMe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="Pace"/>
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MileAge">MileAge</label>
        <input asp-for="MileAge" class="form-control" placeholder="MileAge" />
        <span asp-validation-for="MileAge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="State" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
        <a class="text-danger">Only jpg, jpeg, png files are allowed.</a>
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
</form>
